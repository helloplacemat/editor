{
    "name": "placemat/editor",
    "description": "A clean, elegant, unicode-safe, fluent, immutable, localisable, dependency-free string manipulation library for PHP 7.1+",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Hipsterjazzbo\\Editor\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Placemat\\Editor\\Tests\\": "tests/"
        }
    }
}
